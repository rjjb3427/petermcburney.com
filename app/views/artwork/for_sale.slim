.general
  = render 'shared/preview'
  = render :partial => "shared/nav", locals: {title: 'Artwork For Sale'}
  .container
    .inner
      .text-wrapper
        p[style="font-size:20px;"]
          | The following pieces of art are currently for sale. If you're interested in buying, please reach out to me
          = link_to "here", controller: "contact", action: "index"
          | .
        hr[style="margin-bottom:25px;"]
      .artwork-wrapper.pos-rel
        = render :partial => "shared/images", object: @for_sale, as: 'images'
      hr
      = link_to "Back", controller: "artwork", action: "index"
      img.pos-rel[src="https://s3.amazonaws.com/petermcburneyartwork/general/signature_black.png" style="width:300px;height:auto;float:right"]
  = render :partial => "shared/footer"
