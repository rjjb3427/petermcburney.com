<main id="new" class="general">

  <!-- Nav -->
  <%= render :partial => "shared/nav", locals: {title: 'Add new artwork'} %>

  <div class="container">
    <div class="inner">
      <div style="overflow:hidden;">

        <%= form_for :artwork do |f| %>
          <div class="float-left">
            <p><%= f.label :title %></p>
            <%= f.text_field :title %>
          </div>

          <%= f.submit %>
        <% end %>

        <div class="float-left">
          <h3>Category</h3>
          <button>Painting</button>
          <button>Copic</button>
          <button>Sketch</button>
        </div>
        <div class="float-left">
          <h3>Price</h3>
          <button>No</button>
          <button>Yes</button>
          <input type="text" name="price"></input>
        </div>
      </div>

      <h1>Preview</h1>
      <hr>
      <figure class="center-horizontal">
        <img src="https://s3.amazonaws.com/petermcburneyartwork/paintings/breaching_orca.jpg">
        <figcaption>
          <h2 class="title"></h2>
          <hr>
          <p><span class="media"></span>, <span class="size"></span> <b style="float:right;"><span class="price"></span></b></p>
        </figcaption>
      </figure>
    </div>
  </div>
</div>
