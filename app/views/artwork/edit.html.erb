<main id="edit">
  <h1>Edit</h1>
  <hr>

  <%= form_for :artwork, url: artwork_path(@artwork), method: :patch do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :artwork_type %><br>
      <%= f.text_field :artwork_type %>
    </p>

    <p>
      <%= f.label :media%><br>
      <%= f.text_field :media %>
    </p>

    <p>
      <%= f.label :size %><br>
      <%= f.text_area :size %>
    </p>

    <p>
      <%= f.label :for_sale%><br>
      <%= f.text_field :for_sale %>
    </p>

    <p>
      <%= f.label :price %><br>
      <%= f.text_area :price %>
    </p>

    <p><%= f.submit %></p>
  <% end %>

  <img src="<%= @artwork.image_url %>">
</main>
