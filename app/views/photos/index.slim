.general
  = render 'shared/preview'
  = render :partial => "shared/nav", locals: {title: 'Featured Photography'}
  .container
    .inner
      .text-wrapper
        p[style="font-size:20px;"]
          | Here are a few featured photographs from my collection. Nature, wildlife, and landmark photography may be found from the links below.
        = link_to "Nature", controller: "photos", action: "nature"
        = link_to "Wildlife", controller: "photos", action: "wildlife"
        = link_to "Locations", controller: "photos", action: "locations"
        hr[style="margin-bottom:25px;"]
      .photo-wrapper.pos-rel
        = render :partial => "shared/images", object: @photos, as: 'images'
      hr
      = link_to "Home", controller: "welcome", action: "index"
      img.pos-rel[src="https://s3.amazonaws.com/petermcburneyartwork/general/signature_black.png" style="width:300px;height:auto;float:right"]
  = render :partial => "shared/footer"
