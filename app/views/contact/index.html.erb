<main id="contact" class="general">
  <header class="pos-rel">
    <img src="assets/banners/lake.png"></img>
    <h1 class="margin-none pos-abs">Contact</h1>
  </header>

  <div class="container">
    <div class="inner">
      <%= form_for :photo, url: photos_path, html: { multipart: true } do |f| %>
        <!-- Subject -->
        <section>
          <h4><%= f.label :subject %></h4>
          <%= f.text_field :subject %>
        </section>

        <!-- Email -->
        <section>
          <h4><%= f.label :email %></h4>
          <%= f.text_field :email %>
        </section>

        <!-- Message -->
        <section>
          <h4><%= f.label :message %></h4>
          <%= f.text_area :email %>
        </section>

        <!-- Submit message -->
        <section>
          <h4>Send message</h4>
          <span>Submit</span>
        </section>
      <% end %>
      <%= link_to "Back", controller: "welcome", action: "index" %>
    </div>
  </div>

  <div class="error">
    <main>
      <h2>Error</h2>
      <p>We're sorry, but an error has occured during sending your email.</p>
      <button>Okay</button>
    </main>
  </div>
</main>
